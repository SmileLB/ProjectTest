<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#55000000">

    <RelativeLayout
        android:id="@+id/id_root"
        android:layout_width="match_parent"
        android:layout_height="473dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:clipChildren="false">

        <LinearLayout
            android:id="@+id/id_ll_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/id_rl_top"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                >

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="134dp"
                    android:layout_marginTop="14dp"
                    android:text="¥344.00"
                    android:textColor="#f53b37"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/id_tv_content"
                    android:layout_width="136dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/tv_price"
                    android:layout_marginLeft="134dp"
                    android:layout_marginTop="1dp"
                    android:text="已选    浅灰色    36"
                    android:textColor="#333333"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/id_tv_"
                    android:layout_width="74dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/id_tv_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="134dp"
                    android:layout_marginTop="1dp"
                    android:text="库存546件"
                    android:textColor="#333333"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:src="@mipmap/delet"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="92dp">

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="颜色分类"
                    android:textColor="#333333"
                    android:textSize="16sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_color"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/id_btn_color_one"
                        android:layout_width="41dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_shape_no_select"
                        android:paddingBottom="3.5dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="3.5dp"
                        android:text="黑色"
                        android:textColor="#333333"
                        android:textSize="13sp"/>

                    <Button
                        android:id="@+id/id_btn_color_two"
                        android:layout_width="41dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_shape_no_select"
                        android:paddingBottom="3.5dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="3.5dp"
                        android:text="白色"
                        android:textColor="#333333"
                        android:textSize="13sp"/>


                    <Button
                        android:id="@+id/id_btn_color_three"
                        android:layout_width="54dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_shape_selected"
                        android:paddingBottom="3.5dp"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="3.5dp"
                        android:text="浅灰色"
                        android:textColor="#ffffff"
                        android:textSize="13sp"/>


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="92dp">

                <TextView
                    android:id="@+id/id_size"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="尺码"
                    android:textColor="#333333"
                    android:textSize="16sp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/id_size"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/id_btn_size_one"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/btn_shape_no_select"
                        android:paddingBottom="4dp"
                        android:paddingLeft="6.5dp"
                        android:paddingRight="6.5dp"
                        android:paddingTop="4dp"
                        android:text="35"
                        android:textColor="#333333"
                        android:textSize="13sp"/>

                    <Button

                        android:id="@+id/id_btn_size_two"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_shape_no_select"
                        android:paddingBottom="4dp"
                        android:paddingLeft="6.5dp"
                        android:paddingRight="6.5dp"
                        android:paddingTop="4dp"
                        android:text="36"
                        android:textColor="#cccccc"
                        android:textSize="13sp"
                        android:enabled="false"/>


                    <Button
                        android:id="@+id/id_btn_size_three"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_shape_no_select"
                        android:paddingBottom="4dp"
                        android:paddingLeft="6.5dp"
                        android:paddingRight="6.5dp"
                        android:paddingTop="4dp"
                        android:text="37"
                        android:textColor="#333333"
                        android:textSize="13sp"/>

                    <Button
                        android:id="@+id/id_btn_size_four"
                        android:layout_width="30dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="13dp"
                        android:background="@drawable/btn_shape_selected"
                        android:paddingBottom="4dp"
                        android:paddingLeft="6.5dp"
                        android:paddingRight="6.5dp"
                        android:paddingTop="4dp"
                        android:text="38"
                        android:textColor="#ffffff"
                        android:textSize="13sp"/>


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/id_buy_cout"
                    android:layout_width="65dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="购买数量"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="101dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/id_buy_cout"
                    android:text="(每人限购2件)"
                    android:textColor="#cccccc"
                    android:textSize="13sp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/id_btn_minus"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="1dp"
                        android:background="#fbfbfb"
                        android:text="—"
                        android:textColor="#d8d8d8"
                        android:textSize="13sp"/>

                    <Button
                        android:id="@+id/id_btn_value"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="1dp"
                        android:background="#eff0f1"
                        android:text="38"
                        android:textColor="#333333"
                        android:textSize="13sp"/>


                    <Button
                        android:id="@+id/id_btn_add"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="13dp"
                        android:background="#eff0f1"
                        android:text="+"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dbdbdb"/>

        </LinearLayout>

        <Button
            android:id="@+id/id_sure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="70dp"
            android:background="#f53b37"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="18sp"
            />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="111dp"
        android:layout_height="113dp"
        android:layout_alignBottom="@+id/id_root"
        android:layout_marginBottom="395dp"
        android:layout_marginLeft="15dp"
        android:background="#ffffff"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/food"/>

</RelativeLayout>