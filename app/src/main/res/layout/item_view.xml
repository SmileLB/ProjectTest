<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="177dp"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/id_item_iv"
        android:layout_width="147dp"
        android:layout_height="147dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@mipmap/food"
        />

    <TextView
        android:id="@+id/id_item_content"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_below="@+id/id_item_iv"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:text="包子(6个)"
        android:textColor="#666666"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/id_item_price"
        android:layout_width="49dp"
        android:layout_height="22dp"
        android:layout_below="@+id/id_item_content"
        android:layout_marginLeft="9dp"
        android:text="¥6.00"
        android:textColor="#ee001d"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/id_item_old_price"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_below="@+id/id_item_price"
        android:layout_marginLeft="9dp"
        android:text="¥6.00"
        android:textColor="#cccccc"
        android:layout_marginBottom="9dp"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/id_item_btn"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/id_item_old_price"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_shape"
        android:text="马上抢"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_marginRight="9dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/id_item_btn_two"
        android:layout_width="60dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/id_item_old_price"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_shape_select"
        android:text="已售罄"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:layout_marginRight="9dp"/>


</RelativeLayout>