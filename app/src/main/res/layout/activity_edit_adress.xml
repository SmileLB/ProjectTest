<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.projecttest.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:minHeight="?attr/actionBarSize">


        <RelativeLayout
            android:id="@+id/id_back_iv"
            android:layout_width="50dp"
            android:layout_height="?attr/actionBarSize">

            <ImageView

                android:layout_width="13dp"
                android:layout_height="21dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/back"
                android:layout_marginTop="16.5dp"/>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="编辑地址"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <TextView
            android:layout_marginRight="16dp"
            android:id="@+id/id_tv_manager"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignTop="@+id/id_back_iv"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textSize="18sp"
            android:textColor="#666666"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#55cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/id_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#666666"/>
        
        <EditText
            android:id="@+id/et_people"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:textSize="15sp"
            android:background="@null"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/couser"
            android:layout_toRightOf="@+id/id_people"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#55cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/id_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#666666"/>

        <EditText
            android:id="@+id/tv_contract_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="13951733422"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/couser"
            android:textSize="15sp"
            android:textColor="#333333"
            android:background="@null"
            android:layout_toRightOf="@+id/id_contract"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#55cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/id_detail_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#666666"/>

        <EditText
            android:gravity="top"
            android:id="@+id/detail_adress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:cursorVisible="true"
            android:textCursorDrawable="@drawable/couser"
            android:layout_alignTop="@+id/id_detail_adress"
            android:textColor="#333333"
            android:textSize="15sp"
            android:background="@null"
            android:layout_toRightOf="@+id/id_detail_adress"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#55cccccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/id_stard_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#666666"/>

        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/id_toggle"
            android:layout_width="54dp"
            android:layout_height="31dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            toggle:tbAsDefaultOn="true"
            toggle:tbOnColor="#7ec741"/>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#55cccccc"/>



    
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55cccccc">

        <Button
            android:id="@+id/sava"
            android:layout_width="345dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_shape"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

    </RelativeLayout>


</LinearLayout>